        <activity
            android:name="is.heklapunch.OrganizeActivity"
            android:label="@string/organize_efst" >
        </activity>
        <activity
            android:name="is.heklapunch.OrganizeCreateActivity"
            android:label="@string/organize_new_track_title" >
        </activity>
        <activity
            android:name="is.heklapunch.OrganizeModifyActivity"
            android:label="@string/organize_modify_data_title" >
        </activity>
        <activity
            android:name="is.heklapunch.OrganizeReceiveActivity"
            android:label="@string/organize_receive_data_title" >
