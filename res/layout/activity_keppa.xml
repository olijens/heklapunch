<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:windowSoftInputMode="adjustResize" >
	
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="45dip"
	        android:gravity="center"
	        android:text="@string/keppa_efst"
	        android:textSize="24sp" />
	    
	    <TextView
	        android:id="@+id/keppa_valin_braut"
	        android:layout_width="fill_parent"
	        android:layout_height="45dip"
	        android:gravity="center"
	        android:text=""
	        android:textSize="16sp" />
		
	    <LinearLayout 
	        android:focusable="true"
			android:focusableInTouchMode="true" 
			android:layout_width="match_parent"
			android:layout_height="50dip" >
	    	<requestFocus />
	    	
	    	<Button
	        android:layout_width="match_parent"
	        android:layout_height="50dip"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip"
	        android:onClick="read_qr"
	        android:text="@string/punch" >
	    </Button>
		
		</LinearLayout>
	    	
	    <ScrollView
	        android:id="@+id/ScrollView_keppa"
	        android:layout_width="match_parent"
	        android:layout_height="200dip"
	        android:fillViewport="true" >
	
	        <TableLayout
	            android:id="@+id/station_table"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="30dip"
	            android:layout_marginRight="20dip" >
	        </TableLayout>
	    </ScrollView>
	
	    <Button
	        android:id="@+id/keppa_send"
	        android:layout_width="match_parent"
	        android:layout_height="50dip"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip"
	        android:onClick="send_info_bt"
	        android:text="@string/senda_keppandi" />
	    
	    <Button
	        android:id="@+id/keppa_send_json"
	        android:layout_width="match_parent"
	        android:layout_height="50dip"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip"
	        android:onClick="send_info_json"
	        android:text="@string/senda_json" />
	
	    <Button
	        android:layout_width="match_parent"
	        android:layout_height="50dip"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip"
	        android:onClick="delete"
	        android:text="@string/delete_keppandi" />
	
	    <TableLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip"
	        android:stretchColumns="1" >
	
	        <TableRow android:layout_marginTop="20dp" >
	            <TextView
	                android:id="@+id/textView1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="22sp"
	                android:textStyle="bold"
	                android:text="@string/saved_name" />
	
	            <EditText
	                android:id="@+id/saved_name"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginRight="30dp"
	                android:inputType="text"
	                android:lines="1"
	                android:maxLines="1"
	                android:maxWidth="150dip"
	                android:minWidth="230dip"
	             	android:focusable="true"
	             	android:focusableInTouchMode="true" >
	            </EditText>
	        </TableRow>
	    </TableLayout>
	</LinearLayout>
</ScrollView>